<h1 id='titulo'>Massive Classroom Courses</h1>
<h2>Crear cuenta</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div>
  <%= f.email_field :email, :autofocus => true, placeholder:"Email" %></div>

  <div>
  <%= f.password_field :password, placeholder:"Contraseña" %></div>

  <div>
  <%= f.password_field :password_confirmation, placeholder:"Repetir contraseña" %></div>
  <br>
  <div><%= f.submit "Regístrame", class: 'btn btn-primary' %></div>
<% end %>

<%= render "devise/shared/links" %>
